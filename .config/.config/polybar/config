label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "ï”¸  "
format-padding = 2
format-background = ${colors.module}
label = %percentage_used%%

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

